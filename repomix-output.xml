package com.example.Attendance.controller;

import java.time.LocalDate;
import java.util.List;
import java.util.stream.Collectors;

import jakarta.servlet.http.HttpSession;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;

import com.example.Attendance.entity.Attendance;
import com.example.Attendance.repository.AttendanceRepository;

@Controller
@RequestMapping("/admin")
public class AdminDashboardController {

	@Autowired
	private AttendanceRepository attendanceRepository;

	@GetMapping("/dashboard")
	public String dashboard(HttpSession session, Model model) {
		String role = (String) session.getAttribute("userRole");
		if (!"ADMIN".equals(role)) {
			return "redirect:/login";
		}

		LocalDate today = LocalDate.now();

		// ä»Šæ—¥ã®å…¨å‹¤æ€ 
		List<Attendance> todayAttendances = attendanceRepository.findByDate(today);

		// å‹¤å‹™ä¸­ã®äººæ•°
		long workingCount = todayAttendances.stream()
				.filter(a -> "WORKING".equals(a.getStatus()))
				.count();

		// åŠ´åŸºæ³•é•åã®æ¤œçŸ¥
		List<Attendance> violations = attendanceRepository.findAll().stream()
				.filter(a -> Boolean.TRUE.equals(a.getOverDailyLimit())
						|| Boolean.TRUE.equals(a.getInsufficientBreak()))
				.collect(Collectors.toList());

		model.addAttribute("todayAttendances", todayAttendances);
		model.addAttribute("workingCount", workingCount);
		model.addAttribute("violations", violations);
		model.addAttribute("today", today);

		return "admin/dashboard";
